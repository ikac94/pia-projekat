<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="default">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.avio.model.PilotLicence</class>
    <class>com.avio.model.Airport</class>
    <class>com.avio.model.persistence.FlightReservations</class>
    <class>com.avio.model.persistence.Airport</class>
    <class>com.avio.model.persistence.Model</class>
    <class>com.avio.model.persistence.Airline</class>
    <class>com.avio.model.persistence.Flight</class>
    <class>com.avio.model.persistence.AirplaneLease</class>
    <class>com.avio.model.persistence.Gate</class>
    <class>com.avio.model.persistence.PilotLicence</class>
    <class>com.avio.model.persistence.FlightCrew</class>
    <class>com.avio.model.persistence.Terminal</class>
    <class>com.avio.model.persistence.Checkpoint</class>
    <class>com.avio.model.persistence.Airplane</class>
    <class>com.avio.model.persistence.Manufacturer</class>
    <class>com.avio.model.persistence.FlightCheckpoints</class>
    <class>com.avio.model.persistence.User</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/avio"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
    </properties>
  </persistence-unit>
</persistence>
